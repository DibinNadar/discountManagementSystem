#
# TABLE STRUCTURE FOR: Coupon
#

CREATE TABLE `Coupon` (
  `couponId` int(9) unsigned NOT NULL,
  `couponName` varchar(100) NOT NULL,
  `percentageDiscount` decimal(10,2) NOT NULL DEFAULT 0.00,
  `flatDiscount` int(11) NOT NULL,
  `usageNo` int(11) NOT NULL DEFAULT -1,
  `startDate` date NOT NULL,
  `expiryDate` date NOT NULL,
  `assignedTo` int(11) NOT NULL,
  PRIMARY KEY (`couponId`),
  UNIQUE KEY `flatDiscount` (`flatDiscount`),
  UNIQUE KEY `flatDiscount_2` (`flatDiscount`),
  UNIQUE KEY `couponId` (`couponId`)
) 

ENGINE=InnoDB DEFAULT CHARSET=utf8;




#
# TABLE STRUCTURE FOR: Voucher
#

CREATE TABLE `VoucherId` (
  `voucherId` int(9) unsigned NOT NULL,
  `voucherName` varchar(100) NOT NULL,
  `percentageDiscount` decimal(10,2) NOT NULL DEFAULT 0.00,
  `flatDiscount` int(11) NOT NULL,
  `usageNo` int(11) NOT NULL DEFAULT -1,
  `startDate` date NOT NULL,
  `expiryDate` date NOT NULL,
  `assignedTo` int(11) NOT NULL,
  PRIMARY KEY (`voucherId`),
  UNIQUE KEY `flatDiscount` (`flatDiscount`),
  UNIQUE KEY `flatDiscount_2` (`flatDiscount`),
  UNIQUE KEY `voucherId` (`voucherId`)
);

#
# TABLE STRUCTURE FOR: Customer
#

CREATE TABLE `Customer` (
  `cutomerId` int(9) unsigned NOT NULL,
  `customerName` varchar(100) NOT NULL,
  `moneySaved` varchar(255) NOT NULL,
  KEY `cutomerId` (`cutomerId`)
);



